{
  "compilerOptions": {
    "target": "es2015",
    "strict": true,
    "lib": ["es2020"],
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./typings/*"]
    },
    "resolveJsonModule": true,

    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "tools/**/*.ts",
    "typings/**/*.ts",
    "benchmark/**/*"
  ]
}
